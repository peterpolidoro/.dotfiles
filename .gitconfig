[user]
	email = peter@polidoro.io
	name = Peter Polidoro
[pull]
	rebase = false
[core]
	editor = emacs
	excludesFile = ~/.gitignore_global
[sendemail]
  from = peter@polidoro.io
  smtpserver = smtp.dreamhost.com
  smtpserverport = 465
  smtpencryption = ssl
  smtpuser = peter@polidoro.io
	thread = no
	confirm = never
[credential]
  helper = store
[format]
  thread = shallow
# https://blog.gitbutler.com/how-git-core-devs-configure-git/?ck_subscriber_id=921192603
# clearly makes git better
[column]
  ui = auto
[branch]
  sort = -committerdate
[tag]
  sort = version:refname
[init]
  defaultBranch = main
[diff]
  algorithm = histogram
  colorMoved = plain
  mnemonicPrefix = true
  renames = true
[push]
  default = simple
  autoSetupRemote = true
  followTags = true
[fetch]
  prune = true
  pruneTags = true
  all = true
# why the hell not?
[help]
  autocorrect = prompt
[commit]
  verbose = true
[rerere]
  enabled = true
  autoupdate = true
[core]
  excludesfile = ~/.gitignore
[rebase]
  autoSquash = true
  autoStash = true
  updateRefs = true
# a matter of taste (uncomment if you dare)
[core]
# fsmonitor = true
# untrackedCache = true
[merge]
# (just 'diff3' if git version < 2.3)
  conflictstyle = zdiff3
[pull]
  rebase = true
